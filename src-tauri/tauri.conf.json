{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TaskRails",
  "version": "0.1.0",
  "identifier": "com.antigravity.taskrails",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TaskRails",
        "width": 1440,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "shadow": true,
        "center": true
      }

    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "../LICENSE",
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English", "TradChinese"]
      }
    }
  }
}
